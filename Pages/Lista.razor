@page "/Lista"
<h1>Vehiculos</h1>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Placa</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Color</th>
            <th>Descripcion</th>
        </tr>
    </thead>
    <tbody>
       @using (var db = new Db()) 
        
        @foreach (var dt in db.vechiculos.ToList())
        {
        <tr>
            <th scope="row">@dt.vehiculoid</th>
            <td>@dt.placa</td>
            <td>@dt.marca</td>
            <td>@dt.modelo</td>
            <td>@dt.color</td>
            <td>@dt.descripcion</td>
        </tr>
        }
    </tbody>
</table>

<br />

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Cedula</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Lugar</th>
        </tr>
    </thead>
    <tbody>
        @using (var db = new Db())

            @foreach (var dt in db.personas.ToList())
            {
                <tr>
                    <th scope="row">@dt.personaid</th>
                    <td>@dt.cedula</td>
                    <td>@dt.nombre</td>
                    <td>@dt.apellido</td>
                    <td>@dt.lugar</td>
                  
                </tr>
            }
    </tbody>
</table>